 <ul class="list-inline">
  <% @user.recent_posts.each do |post|%>
    <li class="shadow mb-4 p-3 border-start border-2 border-info rounded">
      <h4><%= post.title %></h4>
      <p><%= truncate post.text, length: 150 %></p>
      <div class="d-flex justify-content-end">
        <div class="d-flex">
          <div class="mx-2">
            <span>0</span>
            <i class="fas fa-comment mx-1"></i>
          </div>
          <div class="mx-2">
            <span>0</span>
            <i class="fas fa-heart mx-1"></i>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>