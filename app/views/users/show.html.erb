<% user = User.where(id: params[:id])[0] %>

<div>
  
  <div class="d-flex justify-content-center">
    <div class="mb-4 shadow d-flex border-end border-4 border-info w-75 mt-5 bg-white p-2">
      <div class="mr-5 block mt-2">
        <img src="<%= user.photo %>" class="rounded float-start rounded border img-thumbnail" style="width: 150px" alt="User image">
      </div>
      <div class="ml-5 w-100 px-5">
        <h2 class="text-secondary"><a href="<%= users_path + '/' + user.id.to_s %>" class="text-muted" style="text-decoration: none"><%= user.name %></a></h2>
        <% if user.posts_counter %>
          <p class="float-right text-end text-muted pt-5">Number of posts: <%= user.posts_counter %> </p>
        <% else %>
          <p class="float-right text-end text-muted pt-5">Number of posts: 0 </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class=" w-75">
      <h2 class="h2">Bio</h2>
      <p><%= user.bio %></p>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class=" w-75">
      <h3 class="text-muted h3">Posts</h3>
      <hr>
      <ul class="list-inline">
        <% user.recent_posts.each do |post|%>
          <li class="shadow mb-4 p-3 border-start border-2 border-info rounded">
            <h4><%= post.title %></h4>
            <p><%= post.text %></p>
            <div class="d-flex justify-content-end">
              <div class="d-flex">
                <div class="mx-2">
                  <span>0</span>
                  <i class="fas fa-comment mx-1"></i>
                </div>
                <div class="mx-2">
                  <span>0</span>
                  <i class="fas fa-heart mx-1"></i>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
  
  <div class="d-flex justify-content-center mb-5">
    <a href="<%= users_path + '/' + user.id.to_s + '/posts' %>" class="btn btn-info text-white">Show All Posts</a>
  </div>


</div>