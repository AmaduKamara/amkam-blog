<% user = User.where(id: params[:id])[0] %>

<%= render 'users/u_card' %>

<div>
  <div class="d-flex justify-content-center">
    <div class=" w-75">
      <h2 class="h2">Bio</h2>
      <p><%= user.bio %></p>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <div class=" w-75">
      <h3 class="text-muted h3">Posts</h3>
      <hr>
     <%= render 'users/post' %>
    </div>
  </div>
  
  <div class="d-flex justify-content-center mb-5">
    <a href="<%= users_path + '/' + user.id.to_s + '/posts' %>" class="btn btn-info text-white">Show All Posts</a>
  </div>


</div>