<div class="d-flex justify-content-center">
  <div class="w-50 p-5 shadow bg-white">

    <h2 class="text-center text-info">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 py-2 border-info rounded" %>
      </div>

      <div class="actions mt-3 mb-3">
        <%= f.submit "Send me reset password instructions", class: "py-2 w-100 bg-info border-0 text-white rounded" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
